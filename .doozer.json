{ 
  "targets": {
    "centos7-x86_64": {
      "buildenv": "centos7-x86_64",
      "builddeps": ["build-essential", 
                    "gcc-c++", "make", "wget"],
      "buildcmd": [
        "rpm -q centos-release",
        "g++ --version",
      	"cd",
      	"wget https://github.com/Kitware/CMake/releases/download/v3.14.0/cmake-3.14.0.tar.gz",
      	"tar xfz cmake-3.14.0.tar.gz",
      	"cd cmake-3.14.0",
      	"./bootstrap",
      	"make -j8",
      	"cd",
        "cmake-3.14.0/bin/cmake /project/repo/checkout -DBUILD_TESTS=ON", "make -j2 test_jsoncons", "cd tests", "./test_jsoncons;"]
    }
  }
}
